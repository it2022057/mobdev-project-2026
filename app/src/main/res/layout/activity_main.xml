<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">

    <!-- Title of the application (main header) -->
    <TextView
        style="@style/activity_header"
        android:id="@+id/main_header"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/main_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subheader -->
    <TextView
        style="@style/activity_subheader"
        android:id="@+id/subheader"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/main_subheader"
        app:layout_constraintEnd_toEndOf="@+id/main_header"
        app:layout_constraintStart_toStartOf="@+id/main_header"
        app:layout_constraintTop_toBottomOf="@+id/main_header" />

    <!-- See tasks button -->
    <Button
        android:id="@+id/main_activity_button1"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:text="@string/main_activity_button1_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subheader" />

    <!-- Configuration Button (icon instead of text) -->
    <ImageButton
        android:id="@+id/main_activity_button2"
        android:background="@android:color/transparent"
        android:contentDescription="@string/main_activity_button2_label"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_configuration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

